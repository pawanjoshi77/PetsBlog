@model IEnumerable<PetBlog.Models.Species>

@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SpeciesName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetID)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpeciesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpeciesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpeciesID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpeciesID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
