@model IEnumerable<PetBlog.Models.Owner>
@{
    ViewData["Title"] = "Index";
}

<h2>Owners</h2> 
<div class="recadd">
    @{ 
        int id = 0;
    }
    @if ((int) ViewData["UserState"] == 0)
    {
        @Html.ActionLink("Join Us!", "Create")
    }
    else if ((int)ViewData["UserState"] == 1)
    {
        @Html.ActionLink("Register An Account", "Register", "Account")
    }
    else
    {
        id = (int)ViewData["UserOwnerID"];
        @Html.ActionLink("Your Profile", "Details/" + id, "Owner")
        
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.OwnerAddress)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.MemberSince)
        </th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OwnerAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberSince)
        </td>

        <td>
            @if (item.OwnerID == id)
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.OwnerID})
                @Html.Raw(" | ")
            }
            @Html.ActionLink("Details", "Details", new { id = item.OwnerID})
            @if(item.OwnerID == id)
            {
                @Html.Raw(" | ")
                @Html.ActionLink("Delete", "Delete", new { id = item.OwnerID})
            }
        </td>
    </tr>
}
</table>
<div class="recadd">
    @Html.ActionLink("New Owner", "Create", "Owner")
</div>

